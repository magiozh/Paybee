@model LibraryApp.Data.Models.Book

@{
    ViewData["Title"] = "Purchase";
}

<div class="wrapper">
    <div class="checkout container align-content-center">
        <form id="payment-form" method="post" asp-controller="Checkout" asp-action="Create">
            @Html.HiddenFor(n => n.Id)
            <div class="container bg-light rounded px-4 px-lg-5 my-5" style="padding-top: 2%; padding-bottom: 2%;">
                <div class="row gx-4 gx-lg-5 align-items-center">
                    <div class="col-md-6"><img src="~/images/@Model.Thumbnail" class="rounded card-img-top mb-5 mb-md-0" style="width: 100%; height: auto;"></div>
                    <div class="col-md-6">

                        <h1 class="display-5 fw-bolder" name="Title" asp-for="@Model.Title">@Model.Title</h1>
                        <div class="fs-5 mb-5"><span>(by: @Model.Author)</span></div>
                        <small class="text-muted">Price: Rp @Model.Price</small>
                        <hr />
                        <p>@Model.Description</p>
                        <script src="https://checkout.stripe.com/checkout.js"
                                class="stripe-button"
                                data-key="pk_test_51O7t2hEit2INBh4Cfhwnk5ahvNQQ5JmJRlZ7ntBYoLw0GdY4CEvE5P32e4IizO2BwUpEOTe8DixBTA01puw5F5tq00429pL1db"
                                data-name="PayBee Payment"
                                data-description="@Model.Author - @Model.Title"
                                data-locale="en"
                                data-label="Bayar Rp @ViewBag.PurchaseAmount">
                        </script>
                        <a asp-controller="Books" asp-action="Index">Kembali</a>
                    </div>
                </div>
            </div>
            @* <div class="col-9">
                
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title" name="Title" asp-for="@Model.Title">@Model.Title</h5>
                    <p class="card-text">@Model.Description</p>
                    <p class="card-text"><small class="text-muted">Pembicara: @Model.Author</small></p>
                    <p class="card-text"><small class="text-muted">Price: $@Model.Price</small></p>
                </div>
                <img style="width: 100%" class="card-img-bottom" src="~/images/@Model.Thumbnail" alt="Card image cap">
            </div>
            </div>
            <hr />*@
        </form>
    </div>
</div>